{
	"dynamic_templates": [
		{
			"template_long_sortable": {
				"mapping": {
					"index": "not_analyzed",
					"store": "true",
					"type": "long"
				},
				"match": "*_sortable",
				"match_mapping_type": "long"
			}
		},
		{
			"template_string_sortable": {
				"mapping": {
					"index": "not_analyzed",
					"store": "true",
					"type": "string"
				},
				"match": "*_sortable",
				"match_mapping_type": "string"
			}
		},
		{
			"template_geolocation": {
				"mapping": {
					"type": "geo_point"
				},
				"match": "*_geolocation"
			}
		}
	],
	"properties": {
		"context": {
			"properties": {
				"location": {
					"type": "geo_point"
				}
			}
		},
		"userId": {
			"index": "not_analyzed",
			"store": "yes",
			"type": "string"
		}

	}
}